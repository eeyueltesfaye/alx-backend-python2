#!/bin/bash

# kurbeScript - Set up and check a local Kubernetes cluster with Minikube

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it first."
    exit 1
fi

# Start Minikube
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Wait a few seconds to ensure it starts
sleep 5

# Verify cluster status
echo "ğŸ” Verifying Kubernetes cluster info..."
kubectl cluster-info || { echo "âŒ Failed to get cluster info."; exit 1; }

# Get pods in all namespaces
echo "ğŸ“¦ Retrieving all pods..."
kubectl get pods --all-namespaces

echo "âœ… Cluster is up and running."
